{
  "manifest_version": 2,
  "name": "Remove FBclid and UTM",
  "version": "0.1",
  "description": "Removes fbclid and utm_ (tracking) query params in URLs",
  "icons": {
    "48": "icons/noFbclidUtmIcon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*?utm_*", "*://*/*&utm_*", "*://*/*?fbclid*"],
      "js": ["stripBadQueryParams.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
